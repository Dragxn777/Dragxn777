---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Projets from "../components/Projets.astro";
import About from "../components/About.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("blog");
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <title>Portfolio</title>
  </head>
  <body>
    <img src="/wave.png" alt="" class="" />
    <main
      class="h-screen
      w-full
      relative
      flex
      flex-col
      items-center
      gap-20
      justify-center
      overflow-x-hidden
      overflow-y-hidden
      -mt-20
      mb-0"
    >
      <h1 class="h-1 text-white uppercase mt-20">Portfolio</h1>
      <div class="flex flex-col items-center md:flex-row mb-36">
        <img
          src="/sun.png"
          alt=""
          class="absolute scale-75 -z-30 top-0 md:left-24 -top-10"
        />

        <img src="/LogoDT.png" class="w-[200px]" />

        <div>
          <h2
            class="leading-none font-bold uppercase text-white tracking-[0.1em]"
          >
            Dragan
          </h2>
          <h2 class="text-white indent-20">Turkk</h2>
        </div>
      </div>
      <img src="/bottomland.png" alt="" class="absolute bottom-0 -z-20" />
    </main>

    <About />

    <article
      class="bg-[url('/bg-real-md.png')] z-30 bg-contain w-full relative flex flex-col items-center my-10"
    >
      <img src="/planete.png" alt="" class="absolute -z-20 top-0 left-0 w-96" />
      <img
        src="/underline.png"
        alt=""
        class="hidden absolute top-10 z-10 rounded-none w-1/6 mr-12 md:block"
      />
      <h3 class="text-white font-bold mt-20">Mes r√©alisations</h3>
      <img
        src="/underline.png"
        alt=""
        class="hidden absolute top-36 z-10 rounded-none w-1/6 ml-12 md:block"
      />
      <ul class="grid drig-cols-1 md:grid-cols-2 gap-20 mt-32">
        {
          posts.map((post) => (
            <li class="relative flex justify-center rounded-lg hover:hover:scale-105 transition-transform">
              <a href={`/blog/${post.id}/`}>
                <img
                  class="h-64 w-[450px] shadow-pink-600 shadow-[10px_10px_10px]"
                  src={post.data.heroImage}
                  alt=""
                />
                <h4 class="text-3xl font-bold text-white absolute left-[9.5rem] bottom-5 ">
                  {post.data.title}
                </h4>
                <p class="date" />
              </a>
            </li>
          ))
        }
      </ul>
    </article>
  </body>
</html>
