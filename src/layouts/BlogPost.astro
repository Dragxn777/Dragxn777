---
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"blog">["data"];

const { title, description, heroImage, pubDate } = Astro.props;

import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body
    ><main>
      <article>
        <div class="hero-image">
          {heroImage && <img src={heroImage} alt="" />}
        </div>
        <div
          class="flex justify-center items-center flex-col border-b-2 border-pink-600 mx-72"
        >
          <h1 class="text-3xl font-bold text-white mt-12 pb-6">
            {title}
          </h1>
          <h2 class="text-xl text-white font-bold pb-4">{description}</h2>
        </div>

        <div class="prose">
          <slot />
        </div>
      </article>
    </main>
  </body>

  <style>
    /* styles.css */

    main {
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: #2d2b28;
    }

    article {
      padding: 2em;
      margin-bottom: 20px;
    }

    article header {
      margin-bottom: 20px;
    }

    article header h1 {
      font-size: 24px;
      margin-top: 0;
    }

    article header p {
      font-size: 18px;
      margin-bottom: 20px;
    }

    .hero-image {
      width: 550px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .hero-image img {
      display: block;
      margin: 0 auto;
      border-radius: 12px;
      box-shadow: 10px 10px 1rem #db2777;
    }

    .prose {
      margin: 1rem 4rem 0 4rem;
      padding: 1em;
      color: white;
    }

    h3 {
      color: #ff0000;
      font-size: 1.5rem;
      margin: 0;
    }
  </style>
</html>
